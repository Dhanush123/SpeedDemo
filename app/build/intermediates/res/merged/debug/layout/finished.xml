<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentResult"
        android:id="@+id/currentResult"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:id="@+id/leaderboardButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="showLeaderboard"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retryButton"
        android:id="@+id/retryButton"
        android:layout_below="@+id/leaderboardButton"
        android:layout_alignLeft="@+id/leaderboardButton"
        android:layout_alignRight="@+id/leaderboardButton"
        android:onClick="retryGame"/>
</RelativeLayout>